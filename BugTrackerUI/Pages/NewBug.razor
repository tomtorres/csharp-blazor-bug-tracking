@page "/new-bug"

@using BugTrackerUI.Services

<h3>Add New Bug</h3>

<EditForm Model="AddBug">
    <InputText @bind-Value="@AddBug.Title" placeholder="Enter Title" />
    <InputText @bind-Value="@AddBug.Description" placeholder="Enter Description" />
    <InputNumber @bind-Value="@AddBug.Priority" placeholder="Enter Priority" />
    <button type="submit" OnValidSubmit="HandleValidSubmit">Add Bug</button>
</EditForm>

@code {

    [Inject]
    public IBugService BugService { get; set; } = new BugService();
    [Inject]
    public NavigationManager NavService { get; set; } = new NavigationManager();
    public Bug AddBug { get; set; } = new Bug();

    protected void HandleValidSubmit()
    {
        BugService.AddBug(AddBug);
        NavService.NavigateTo("");
    }
}
